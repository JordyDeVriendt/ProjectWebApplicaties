@{
    ViewData["Title"] = "Grant Permission";
}
@model Project.ViewModels.GrantPermissionViewModel

<div class="container" style="margin-bottom:20%;">
    <form asp-action="GrantPermission" asp-method="post">
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
        <div class="form-group">
            <select asp-for="GebruikerId" asp-items="Model.Gebruikers"></select>
        </div>
        <div class="form-group">
            <select asp-for="RolId" asp-items="Model.Rollen"></select>
        </div>
        <div class="form-group">
            <input type="submit" value="Create" class="btn btn-primary" />
        </div>
    </form>
</div>
