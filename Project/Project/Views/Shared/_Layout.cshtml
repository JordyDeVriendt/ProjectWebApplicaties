
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Project</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/Index.css" />
    <link rel="stylesheet" href="~/css/Home.css" />
    <link rel="stylesheet" href="~/css/StyleSheet.css" />
    <link rel="shortcut icon" type="image/x-icon" href="~/images/Transparant/jdv-low-resolution-logo-white-on-transparent-background.png" />
</head>
<style>
    header {
        background:white;
    }
    footer {
        background: #8D99AE;
        color:white;
        bottom: 0;
        position: absolute;
    }
</style>
<body>
    <header>
        <nav class="navbar navbar-expand-lg navbar-light container">
            <div class="container">
                <a class="navbar-brand" asp-area="" asp-controller="Home" asp-action="Index"><img src="~/images/jdv-low-resolution-logo-black-on-white-background.png"/></a>
                <button class="navbar-toggler" type="button" data-toggle="collapse" data-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                        aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="navbar-collapse collapse d-sm-inline-flex flex-sm-row-reverse">
                    <ul class="navbar-nav flex-grow-1">
                        <li class="nav-item" >
                            <a class="nav-link"  asp-area="" asp-controller="Home" asp-action="Index">Home</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" asp-area="" asp-controller="Aanbod" asp-action="GamePc">Game PC's</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link"  asp-area="" asp-controller="Over" asp-action="Index">Over</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link"  asp-area="" asp-controller="Contact" asp-action="Index">Contact</a>
                        </li>
                        @if (this.User.IsInRole("admin"))
                        {
                            <li class="nav-item dropdown">
                            <a class="nav-link dropdown-toggle"  href="#" id="navbarDropdown" role="button" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                                Admin
                            </a>
                            <div class="dropdown-menu" aria-labelledby="navbarDropdown">
                                <a class="nav-link"  asp-area="" asp-controller="Admin" asp-action="GamePc">Game PC's</a>
                                <a class="nav-link"  asp-area="" asp-controller="Gebruiker" asp-action="Index">Gebruikers</a>
                            </div>
                            </li>
                        }
                        <li class="nav-item">
                            <partial name="_LoginPartial" />
                        </li>
                    </ul>
                </div>
            </div>
        </nav>
    </header>
    <div >
        <main role="main" class="pb-3">
             @RenderBody()
        </main>
    </div>
    

    <footer class="border-top footer text-muted" style="">
        <div class="container text-center align-content-center">
            <div class="row">
                <div class="col-md-12">
                    <img src="~/images/Transparant/jdv-low-resolution-logo-black-on-transparent-background.png" alt="Logo transparant zwart"/>
                </div>
            </div>
            <div class="row">
                <div class="col-md-12 text-center align-content-center">
                    <nav class="navbar navbar-expand-lg container">
                        <div class="container">
                            <button class="navbar-toggler" type="button" data-toggle="collapse" data-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                                    aria-expanded="false" aria-label="Toggle navigation">
                                <span class="navbar-toggler-icon"></span>
                            </button>
                            <div class="navbar-collapse collapse d-sm-inline-flex flex-sm-row-reverse">
                                <ul class="navbar-nav flex-grow-1">
                                    <li >
                                        <a  asp-area="" asp-controller="Home" asp-action="Index">Home</a>
                                    </li>
                                    <li >
                                        <a  asp-area="" asp-controller="Aanbod" asp-action="GamePc">Game PC's</a>
                                    </li>
                                    <li >
                                        <a  asp-area="" asp-controller="Over" asp-action="Index">Over</a>
                                    </li>
                                    <li >
                                        <a  asp-area="" asp-controller="Contact" asp-action="Index">Contact</a>
                                    </li>
                                </ul>
                            </div>
                        </div>
                    </nav>
                </div>
            </div>
            <div class="row">
                <div class="col-md-12">
                </div>
            </div>
            <div class="row">
                <div class="col-md-12">
                    &copy; 2022 - Project - <a asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a>
                </div>
            </div>
        </div>
    </footer>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @RenderSection("Scripts", required: false)
</body>
</html>
