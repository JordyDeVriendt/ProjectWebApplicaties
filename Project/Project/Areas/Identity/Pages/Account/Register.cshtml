@page
@model RegisterModel
@using Project.Areas.Identity.Data
@{
    ViewData["Title"] = "Register";
}

<div class="container justify-content-center text-center" style="margin-bottom:20%;">
    <form asp-route-returnUrl="@Model.ReturnUrl" method="post">
        <h1>@ViewData["Title"]</h1>
        <h4>Maak een nieuw account.</h4>
        <hr />
        <div class="form-group">
            <label asp-for="Input.Naam"></label>
            <input asp-for="Input.Naam" class="form-control" />
            <span asp-validation-for="Input.Naam" class="text-danger"></span>
        </div>
        <div class="form-group">
            <label asp-for="Input.GeboorteDatum"></label>
            <input asp-for="Input.GeboorteDatum" class="form-control" />
            <span asp-validation-for="Input.GeboorteDatum" class="text-danger"></span>
        </div>
        <div asp-validation-summary="All" class="text-danger"></div>
        <div class="form-group">
            <label asp-for="Input.Email"></label>
            <input asp-for="Input.Email" class="form-control" />
            <span asp-validation-for="Input.Email" class="text-danger"></span>
        </div>
        <div class="form-group">
            <label asp-for="Input.Password"></label>
            <input asp-for="Input.Password" class="form-control" />
            <span asp-validation-for="Input.Password" class="text-danger"></span>
        </div>
        <div class="form-group">
            <label asp-for="Input.ConfirmPassword"></label>
            <input asp-for="Input.ConfirmPassword" class="form-control" />
            <span asp-validation-for="Input.ConfirmPassword" class="text-danger"></span>
        </div>
        <button type="submit" class="btn btn-primary">Register</button>
        <p>
            Heb je al een account? 
            <a asp-page="./Login" asp-route-returnUrl="@Model.ReturnUrl">Log in</a>
        </p>
    </form>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
